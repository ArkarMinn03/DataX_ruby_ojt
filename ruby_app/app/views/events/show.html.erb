<div class="container p-3 mt-3" style="width: 800px;">
  <h4 class="text-center mb-4">Event Details</h4>

  <% if notice.present? %>
    <div class="alert alert-info mx-auto text-center">
      <%= notice %>
    </div>
  <% end %>
  <% if alert.present? %>
    <div class="alert alert-warning mx-auto text-center">
      <%= alert %>
    </div>
  <% end %>
  <div class="border border-dark-50 rounded p-5">
    <%= render partial: "event", locals: { event: @event, viewEventDetails: true } %>

    <div class="d-flex justify-content-center">

    <% if @event.start_time > Time.current() %>
      <%= link_to t('buttons.common.edit', data: 'Event'), edit_event_path(@event), class: "btn btn-success me-2" %>
    <% else %>
      <button class="btn btn-success me-2" disabled>Unable to edit</button>
    <% end %>
      <%= button_to t('buttons.common.delete', data: 'Event'), @event, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>

</div>



